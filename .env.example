# Environment Variables Configuration

# OpenAI API Key - Required for resume analysis
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration - Required for sending interview invitations
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Twilio Configuration - Optional (for WhatsApp notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=103.149.105.113,localhost,127.0.0.1

# Hide pygame support prompt
